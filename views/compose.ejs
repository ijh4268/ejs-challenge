<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="post">
	<div class="form-group">
		<label for="postTitle">Title</label>
		<input type="text" class="form-control" name="postTitle" id="postTitle" autocomplete="off"/>
	</div>
	<div class="form-group">
		<label for="postBody">Post</label>
		<textarea name="postBody" class="form-control" id="postBody" cols="30" rows="6"></textarea>
	</div>
  <button class="btn btn-primary"type="submit" name="button">Publish</button>
</form>

